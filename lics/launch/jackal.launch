<launch>
  <!-- Goal position -->
  <arg name="goal_x" default="0" />
  <arg name="goal_y" default="10" />

  <!-- Goal orientation -->
  <arg name="goal_z" default="0.7071068" />
  <arg name="goal_w" default="0.7071068" />

  <!-- Run hector_mapping -->
<!--   <include file="$(find jackal_helper)/launch/hector_mapping.launch" /> -->

  <!-- Run move_base -->
  <include file="$(find jackal_helper)/launch/move_base.launch" />

<!--   <node pkg="rviz" type="rviz" name="rviz" args="-d $(find jackal_helper)/rviz/navigation.rviz" /> -->


  <!-- Run run.py on pkg lics inside folder script -->
  <node pkg="lics" type="run.py" name="lics" output="screen">
      <param name="config_path" value="$(find lics)/config/jackal.yaml" />
  </node>


  <node pkg="rostopic" type="rostopic" name="published_goal" args='pub -r 10 /move_base_simple/goal geometry_msgs/PoseStamped "{header: {stamp: now, frame_id: "odom"}, pose: {position: {x: $(arg goal_x), y: $(arg goal_y), z: 0.0}, orientation: {z: $(arg goal_z), w: $(arg goal_w)}}}"' />
</launch>
